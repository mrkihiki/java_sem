<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<TabPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.java_sem.StartsC">
   <tabs>
      <Tab closable="false" text="Вход">
         <content>
            <VBox alignment="CENTER" prefHeight="221.0" prefWidth="233.0" spacing="20.0">
              <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
              </padding>
               <Text fx:id="logMess" strokeType="OUTSIDE" strokeWidth="0.0" />
               <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Логин" />
               <TextArea fx:id="loginLogin" prefHeight="12.0" prefWidth="193.0" />
               <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Пароль" />
               <TextArea fx:id="loginPass" prefHeight="0.0" prefWidth="193.0" />
              <Button onAction="#onLogin" text="Вход" />
            </VBox>
         </content>
      </Tab>
      <Tab closable="false" text="Регистрация">
         <content>
            <VBox alignment="CENTER" prefHeight="221.0" prefWidth="233.0" spacing="20.0">
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <children>
                  <TextFlow fx:id="regMess" prefHeight="200.0" prefWidth="200.0" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Логин" />
                  <TextArea fx:id="regLogin" prefHeight="12.0" prefWidth="193.0" />
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Пароль" />
                  <TextArea fx:id="regPass" prefHeight="0.0" prefWidth="193.0" />
                  <Button onAction="#onReg" text="Зарегистрироватся" />
               </children>
            </VBox>
         </content>
      </Tab>
   </tabs>
</TabPane>
